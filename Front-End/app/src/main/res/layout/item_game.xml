<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#4A4A4A"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Image du jeu -->
    <ImageView
        android:id="@+id/imageGame"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/game_image"
        android:layout_marginEnd="12dp"
        android:background="#222222" />  <!-- optionnel, pour bien voir la zone -->

    <!-- Infos du jeu -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textGameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du jeu"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textPlatform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plateforme"
            android:textColor="#CCCCCC"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Bouton Ã‰diter -->
    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_edit"
        android:contentDescription="Modifier"
        app:tint="#CCCCCC" />

    <!-- Bouton Supprimer -->
    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_delete"
        android:contentDescription="Supprimer"
        app:tint="#CCCCCC" />

</LinearLayout>
